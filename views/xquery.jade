extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel="stylesheet" href="stylesheets/custom.css")

head
title = title
block body

    <a href="/">
    +img-responsive-center("images/logo.jpg")
    </a>

    .container
        +navbar(title, "dropdown_menu")
            +nav_item("/") Home
                +icon-success("home")
            +nav_item("browse?type=Broughton") Browse
                +icon-success("book")
            +nav_item("/search", "active") Search
                +icon-success("search")

    br

    .container
        h1 #{title}
        p Explore the #{title} database.
        p Text Search
        form(name="query", action="/search", method="get")
            +input("text", "query", "e.g. Colenso", "", name="searchString")
            +submit("Search")
        p Xquery Search
        form(name="xquery", action="/xquery", method="get")
            +input("text", "xquery", "e.g. //name", "", name="searchString")
            +submit("Search")

        if(nResults > 0)
            +alert-success(nResults + " results found")
        !{results}